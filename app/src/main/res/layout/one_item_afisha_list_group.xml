<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:id="@+id/idBackground"
    android:background="@drawable/row_background">

    <!-- icon -->
    <ImageView
        android:id="@+id/idAfhishaListGroupLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="icon"
        android:gravity="center"
        android:src="@mipmap/ic_launcher"/>

    <!-- title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/idAfhishaListGroupLogo"
        >

        <TextView
            android:id="@+id/idTitleAfishaListGroup"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@drawable/list_text_color"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="Название станции"
            android:gravity="center|left"
            android:layout_weight="1"
            android:textSize="22dp"/>

    </LinearLayout>


</RelativeLayout>