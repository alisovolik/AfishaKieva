<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idFilmListCard"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <info.ukrtech.delphi.kievafisha.Shared.EllipsizingTextView
                    android:id="@+id/idFilmListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewListsTitle"
                    android:text="Здесь будет название фильма"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <info.ukrtech.delphi.kievafisha.Shared.EllipsizingTextView
                android:id="@+id/idFilmListDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="8"
                android:text="Здесь будет описание фильма"
                style="@style/TextViewListsText"
                android:layout_weight="3"
                android:ellipsize="marquee"/>

            <ImageView
                android:id="@+id/idFilmListLogo"
                android:layout_width="142dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="filmLogo" />
        </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
