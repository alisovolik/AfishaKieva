<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idPlaceListCard"
        android:textColor="@color/colorBackground"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:orientation="horizontal" >

                <info.ukrtech.delphi.kievafisha.Shared.EllipsizingTextView
                    android:id="@+id/idPlaceListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Здесь будет название"
                    android:textColor="@color/colorFontAndIcon"
                    android:background="@color/colorBackground"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBackground"
            android:baselineAligned="false">

            <info.ukrtech.delphi.kievafisha.Shared.EllipsizingTextView
                android:id="@+id/idPlaceListDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="8"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBackground"
                android:textColor="@color/colorFontAndIcon"
                android:text="Здесь будет адрес"
                android:textSize="12sp"
                android:layout_weight="3"
                android:ellipsize="marquee"
                />

            <ImageView
                android:id="@+id/idPlaceListLogo"
                android:layout_width="142dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="placeLogo" />
        </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>
